---
const base = import.meta.env.BASE_URL ?? '/';
---

<section class="min-h-[85vh] flex items-center bg-transparent py-24 relative overflow-hidden">
  <!-- Three.js background -->
  <div id="three-root" class="absolute inset-0 z-0" aria-hidden="true"></div>

  <!-- Decorative gradient orbs -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div
      class="absolute top-20 left-10 w-96 h-96 bg-gradient-to-br from-blue-400/30 to-purple-400/30 dark:from-blue-500/20 dark:to-purple-500/20 rounded-full blur-3xl animate-pulse"
    >
    </div>
    <div
      class="absolute bottom-20 right-10 w-80 h-80 bg-gradient-to-br from-indigo-400/30 to-pink-400/30 dark:from-indigo-500/20 dark:to-pink-500/20 rounded-full blur-3xl animate-pulse"
      style="animation-delay: 1s;"
    >
    </div>
  </div>

  <div class="container relative z-10">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div class="fade-in">
        <h1 class="text-4xl sm:text-5xl md:text-6xl leading-tight mb-3">
          Hi, I'm <span
            class="bg-gradient-to-r from-primary via-purple-500 to-secondary bg-clip-text text-transparent font-extrabold"
            >Chris Tulsi</span
          >
        </h1>
        <p class="text-xl text-gray-700 dark:text-gray-200 mb-6 font-semibold">Software Engineer</p>
        <p
          class="text-base sm:text-lg text-gray-700 dark:text-gray-300 mb-8 leading-relaxed max-w-2xl"
        >
          I build elegant, maintainable software and infrastructure solutions for government and
          enterprise clients. My work focuses on reliability, automation, and developer
          productivity.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a href={`${base}#projects`} class="btn-primary btn-enhanced" id="view-projects-btn"
            >View Projects</a
          >
          <a href={`${base}#contact`} class="btn-outline btn-enhanced" id="get-in-touch-btn"
            >Get in Touch</a
          >
        </div>
      </div>

      <div class="flex justify-center items-center relative">
        <div class="relative">
          <div
            class="hidden md:block absolute -inset-8 rounded-3xl bg-gradient-to-br from-primary/20 via-purple-500/20 to-secondary/20 blur-3xl animate-pulse"
            aria-hidden="true"
            style="animation-delay: 0.5s;"
          >
          </div>
          <div
            class="animate-float p-8 bg-white/70 dark:bg-gray-900/70 backdrop-blur-xl rounded-3xl shadow-2xl border border-white/30 dark:border-gray-700/50 relative z-10"
          >
            <svg
              width="300"
              height="300"
              viewBox="0 0 300 300"
              class="w-[200px] h-[200px] md:w-[260px] md:h-[260px]"
            >
              <circle cx="150" cy="150" r="140" class="fill-primary opacity-20"></circle>
              <circle cx="150" cy="150" r="100" class="fill-secondary opacity-30"></circle>
              <text x="150" y="160" text-anchor="middle" font-size="80" class="fill-primary"
                >üë®‚Äçüíª</text
              >
            </svg>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Import the Three.js entry point directly as a module
  import '../scripts/three-hero-entry.js';

  // Add ripple effect to enhanced buttons
  document.addEventListener('DOMContentLoaded', () => {
    const enhancedButtons = document.querySelectorAll('.btn-enhanced');

    enhancedButtons.forEach((button) => {
      button.addEventListener('click', function (this: HTMLElement) {
        // Add ripple class
        this.classList.add('ripple');

        // Remove class after animation completes
        setTimeout(() => {
          this.classList.remove('ripple');
        }, 600);
      });
    });
  });
</script>
