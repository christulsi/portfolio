---
import skillsData from '../data/skills.json';
import type { Skills } from '../types/data';

const skills = skillsData as Skills;
---

<section id="about" class="py-20 bg-transparent relative">
  <!-- Decorative background elements -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div
      class="absolute top-20 -left-20 w-72 h-72 bg-blue-300/20 dark:bg-blue-500/10 rounded-full blur-3xl"
    >
    </div>
    <div
      class="absolute bottom-20 -right-20 w-96 h-96 bg-purple-300/20 dark:bg-purple-500/10 rounded-full blur-3xl"
    >
    </div>
  </div>

  <div class="container relative z-10">
    <h2 class="fade-in text-4xl text-center mb-12">About Me</h2>
    <div class="grid md:grid-cols-2 gap-16">
      <div class="fade-in">
        <p class="text-gray-700 dark:text-gray-300 text-lg leading-relaxed mb-6">
          With a Master's degree in Computer Software Engineering from Nankai University and a
          Bachelor's in Computer Science from the University of Guyana, I bring a solid academic
          foundation to my work.
        </p>
        <p class="text-gray-700 dark:text-gray-300 text-lg leading-relaxed mb-6">
          Currently serving as a Senior ICT Engineer at the National Data Management Authority, I've
          led digital transformation initiatives, improved system uptime by 15%, and mentored junior
          engineers to foster continuous learning and professional growth.
        </p>
        <p class="text-gray-700 dark:text-gray-300 text-lg leading-relaxed">
          I'm passionate about optimizing systems, implementing DevOps best practices, and
          leveraging emerging technologies to solve complex business challenges. AWS Certified Cloud
          Practitioner with expertise in full-stack development and cloud infrastructure.
        </p>
      </div>
      <div
        class="fade-in bg-white/60 dark:bg-gray-800/40 backdrop-blur-xl rounded-3xl p-8 border border-white/20 dark:border-gray-700/50 shadow-2xl"
      >
        <h3 class="text-2xl mb-8">Skills & Technologies</h3>
        <div class="flex flex-col gap-8">
          {
            skills.categories.map((category, catIndex) => (
              <div>
                <h4 class="text-primary text-lg mb-4">{category.name}</h4>
                <div class="flex flex-wrap gap-3">
                  {category.skills.map((skill, skillIndex) => {
                    const animIndex = Math.min(catIndex * 6 + skillIndex + 1, 12);
                    return <span class={`skill-tag animate-fade-in-up-${animIndex}`}>{skill}</span>;
                  })}
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .skill-tag {
    @apply bg-gradient-to-br from-gray-50 to-white dark:from-gray-800 dark:to-gray-900
           px-5 py-2.5 rounded-full text-sm font-semibold border-2 border-gray-200 dark:border-gray-700
           transition-all duration-300 relative overflow-hidden;
  }

  .skill-tag::before {
    content: '';
    @apply absolute top-0 -left-full w-full h-full bg-gradient-to-r from-primary to-secondary -z-10 transition-all duration-300;
  }

  .skill-tag:hover {
    @apply text-white border-primary -translate-y-0.5 shadow-lg;
  }

  .skill-tag:hover::before {
    @apply left-0;
  }
</style>
