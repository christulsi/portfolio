---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Layout from '../layouts/Layout.astro';

// Use Astro's base path for proper URL resolution
const base = import.meta.env.BASE_URL;
---

<Layout title="404 - Page Not Found | Chris Tulsi">
  <Header />
  <main id="main">
    <section
      class="min-h-[80vh] flex items-center bg-gradient-to-br from-gray-50 to-white dark:from-gray-900 dark:to-gray-800 py-24 relative overflow-hidden"
    >
      <!-- Three.js background -->
      <div id="three-root" class="absolute inset-0 z-0" aria-hidden="true"></div>

      <div class="container relative z-10">
        <div class="max-w-2xl mx-auto text-center fade-in">
          <!-- 404 Number with gradient -->
          <h1
            class="text-9xl sm:text-[12rem] font-bold mb-6 bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent leading-none"
          >
            404
          </h1>

          <!-- Error Message -->
          <h2 class="text-3xl sm:text-4xl font-bold mb-4">Page Not Found</h2>

          <p class="text-lg text-gray-600 dark:text-gray-300 mb-8 leading-relaxed">
            Oops! The page you're looking for doesn't exist. It might have been moved or deleted.
          </p>

          <!-- Helpful Navigation -->
          <div
            class="bg-white/80 dark:bg-gray-900/70 backdrop-blur-sm border border-gray-200 dark:border-gray-700 rounded-2xl p-8 mb-8"
          >
            <h3 class="text-xl font-semibold mb-4">Here's what you can do:</h3>
            <ul class="text-left space-y-3">
              <li class="flex items-start gap-3">
                <svg
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  class="text-primary flex-shrink-0 mt-0.5"
                >
                  <polyline points="9 11 12 14 22 4"></polyline>
                  <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"></path>
                </svg>
                <span class="text-gray-600 dark:text-gray-300">Check the URL for typos</span>
              </li>
              <li class="flex items-start gap-3">
                <svg
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  class="text-primary flex-shrink-0 mt-0.5"
                >
                  <polyline points="9 11 12 14 22 4"></polyline>
                  <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"></path>
                </svg>
                <span class="text-gray-600 dark:text-gray-300"
                  >Return to the homepage and start fresh</span
                >
              </li>
              <li class="flex items-start gap-3">
                <svg
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  class="text-primary flex-shrink-0 mt-0.5"
                >
                  <polyline points="9 11 12 14 22 4"></polyline>
                  <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"></path>
                </svg>
                <span class="text-gray-600 dark:text-gray-300"
                  >Browse my projects or get in touch</span
                >
              </li>
            </ul>
          </div>

          <!-- Action Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href={base} class="btn-primary">
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                class="inline mr-2"
              >
                <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                <polyline points="9 22 9 12 15 12 15 22"></polyline>
              </svg>
              Go Home
            </a>
            <a href={`${base}#projects`} class="btn-outline"> View Projects </a>
            <a href={`${base}#contact`} class="btn-outline"> Contact Me </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />

  <script>
    import threeEntryUrl from '../scripts/three-hero-entry.js?url';

    // Dynamically load the Three.js script for background
    const script = document.createElement('script');
    script.type = 'module';
    script.src = threeEntryUrl;
    document.head.appendChild(script);
  </script>
</Layout>
